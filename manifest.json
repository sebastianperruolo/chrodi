{
  "manifest_version": 2,
  "name": "Kodi Chrome App",
  "short_name": "Chrodi",
  "description": "A Chrome App wrapper for Kodi web UI",
  "version": "0.0.4",
  "minimum_chrome_version": "38",

  "icons": {
    "16": "assets/icon_16.png",
    "128": "assets/icon_128.png"
  },

  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "permissions": [
    "webview",
    "storage",
    "http://*/"
  ]
}
